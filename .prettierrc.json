{
  "semi": true,
  "tabWidth": 2,
  "bracketSpacing": true,
  "jsxBracketSameLine": false,
  "jsxSingleQuote": false,
  "quoteProps": "consistent",
  "printWidth": 120,
  "singleQuote": true,
  "trailingComma": "all",
  "useTabs": false,
  "overrides": [
    {
      "files": "*.md",
      "options": {
        "tabWidth": 2,
        "useTabs": false,
        "trailingComma": "none"
      }
    },
    {
      "files": "*.yml",
      "options": {
        "semi": true,
        "tabWidth": 2,
        "singleQuote": true,
        "useTabs": false,
        "trailingComma": "none",
        "printWidth": 300
      }
    },
    {
      "files": "*.yaml",
      "options": {
        "semi": true,
        "tabWidth": 2,
        "singleQuote": true,
        "useTabs": false,
        "trailingComma": "none",
        "printWidth": 300
      }
    }
  ]
}
